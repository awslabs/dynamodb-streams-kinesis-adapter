    <properties>
        <software-kinesis.version>3.1.0</software-kinesis.version>
        <gpg.skip>true</gpg.skip>
        <maven.dependency.version>3.0.0</maven.dependency.version>
        <awssdk.version>2.26.19</awssdk.version>
    </properties>

